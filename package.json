{
  "name": "loxhuebridge",
  "version": "2.0.0",
  "description": "Philips Hue V2 to Loxone Bridge",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "DEBUG=true node server.js",
    "dev:watch": "pm2-dev start ecosystem.config.js --env development",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:dev": "pm2 start ecosystem.config.js --env development --watch",
    "pm2:stop": "pm2 stop loxhuebridge",
    "pm2:restart": "pm2 restart loxhuebridge",
    "pm2:logs": "pm2 logs loxhuebridge",
    "pm2:status": "pm2 status",
    "test": "node test-refactored.js",
    "legacy": "node server.legacy.js"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "pm2": "^5.4.3"
  }
}
